<%= form_tag(login_2_path, :method=>'post') do %>
	<%= label_tag(:form_name, "Por favor identifiquese") %>
	<br>
	<br>
	<div class="field">
		<%= label_tag(:email_label, "Correo electronico:") %>
		<%= text_field_tag(:email, nil, :required => true) %>
	</div>
	<div class="field">
		<%= label_tag(:password, "Contraseña:") %>
		<%= password_field_tag(:password, nil, :required => true) %>
	</div>
	<div class="field">
		<%= image_tag("http://captchator.com/captcha/image/#{@random}") %>
		<%= text_field_tag(:captcha, nil, :required => true)  %>
		<%= hidden_field_tag(:captcha_random, @random) %>
		<%= hidden_field_tag(:captcha_random_hash, @random_hash) %>
		<br>
	</div>
	<%= submit_tag("Iniciar sesión") %>
<% end %>