<h1>Viendo Buzones de Tareas</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Enunciado</th>
    <th>Descripción</th>
    <th>¿Activo?</th>
    <th>Fecha Creación</th>
    <th>Fecha Límite</th>
    <th></th>
  </tr>

<% @homeworks.each do |homework| %>
  <tr>
    <td><%= homework.name %></td>
    <td><%= homework.filename %></td>
    <td>
        <% if homework.description.length < 15 %>
            <%= homework.description %>
        <% else %>
            <%= homework.description.first(15) %> ...
        <% end %>
        
    </td>
    <td>
        <% if homework.active %>
            Sí
        <% else %>
            No
        <% end %>
    </td>
    <td><%= homework.created_at %></td>
    <td><%= homework.expires_at %></td>
    <td><a href = <%= url_for(homework) %> >
        <i class="icon-eye-open"></i>
    </a>
    <% if session[:user_id] == homework.user_id %>
        <span>|</span>
        <a href = <%= url_for(edit_homework_path(homework)) %> >
            <i class="icon-pencil"></i>
        </a>
        <span>|</span>
        <a href = <%= url_for(homework) %> data-method="delete" onclick="return confirm('Are you sure?')">
            <i class="icon-trash"></i>
        </a>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Buzón de Tareas', new_homework_path %>
