<h1>Listing homeworks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Filename</th>
    <th>Description</th>
    <th>Active</th>
    <th>Expires at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @homeworks.each do |homework| %>
  <tr>
    <td><%= homework.name %></td>
    <td><%= homework.filename %></td>
    <td><%= homework.description %></td>
    <td><%= homework.active %></td>
    <td><%= homework.expires_at %></td>
    <td><%= link_to 'Show', homework %></td>
    <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
    <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

